#include <stdio.h>
int main()
{
    char name[20];
    int sal;
    double tax;
    printf("Enter customer name: ");
    scanf("%s", name);
    printf("enter income:");
    scanf("%d", &sal);
    if(sal<=150000)
    {
    printf("no tax");
    }
    else if(sal>=150000 && sal<=300000)
    {
    tax=sal*0.10;
    printf("%lf",tax);
    }
    else if(sal>=300000 && sal<=500000)
    {
    tax=sal*0.15;
    printf("%lf",tax);
    }
    else if(sal>=500000)
    {
    tax=sal*0.20;
    printf("%lf",tax);
    }
    return 0;
}
